<.flash_group flash={@flash} />

<div class="grid gap-2 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
  <%= for person <- @people do %>
    <.person_card person={person} />
  <% end %>
</div>

<.pagination
  page_number={@page_number}
  total_pages={@total_pages}
  per_page={@per_page}
  path="/people"
/>
